{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "dist/api",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/minimal", "dest": "/api/minimal" },
    { "src": "/api", "dest": "/api" }
  ]
} 