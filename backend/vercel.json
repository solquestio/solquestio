{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://solquest.io" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https://api.solquest.io https://solquest.io; img-src 'self' data:; style-src 'self' 'unsafe-inline'" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://solquest.io" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/quests/paths", "destination": "/api/quests/paths.ts" },
    { "source": "/api/quests/\\[id\\]", "destination": "/api/quests/[id].ts" },
    { "source": "/api/quests/complete", "destination": "/api/quests/complete.ts" },
    { "source": "/api/auth/challenge", "destination": "/api/auth/challenge.ts" },
    { "source": "/api/auth/verify", "destination": "/api/auth/verify.ts" },
    { "source": "/api/users", "destination": "/api/users/index.ts" },
    { "source": "/api/users/check-in", "destination": "/api/users/check-in.ts" },
    { "source": "/api/quests/check-balance", "destination": "/api/quests/check-balance.ts" },
    { "source": "/api/quests/verify-answer", "destination": "/api/quests/verify-answer.ts" },
    { "source": "/api/quests/path/(.*)", "destination": "/api/quests/path/[pathId].ts" },
    { "source": "/api/utils", "destination": "/api/utils.ts" },
    { "source": "/api/public", "destination": "/api/public.ts" },
    { "source": "/api/health", "destination": "/api/utils.ts?path=health" },
    { "source": "/api/auth", "destination": "/api/auth/index.ts" },
    { "source": "/api/quests", "destination": "/api/quests/index.ts" },
    { "source": "/api", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/api/index.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}