# MongoDB Connection String (use your cloud provider, e.g., MongoDB Atlas)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority

# JSON Web Token Secret (generate a strong random string)
JWT_SECRET=your_strong_random_jwt_secret_here

# Frontend URL (where your frontend is deployed)
FRONTEND_URL=https://www.solquest.io

# Helius Configuration
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_RPC_URL=your_helius_rpc_url_here

# NFT/Quest Configuration
OG_NFT_MINT_ADDRESS=your_og_nft_mint_address_here
REFER_FRIEND_OG_QUEST_ID=refer-friend-og
MINT_OG_NFT_QUEST_ID=mint-og-nft
EXPLORE_TRANSACTION_QUEST_ID=explore-solana-transaction

# PORT is usually set by the hosting provider (e.g., Vercel, Render)
# PORT=5000